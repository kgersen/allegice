<Window x:Class="ICE3.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ICE 3" Height="426.281" Width="637.27">
    <Window.Resources>
        <DataTemplate x:Key="civFormating" DataType="DataCivilizationIGC">
            <StackPanel Orientation="Horizontal">
                <TextBlock>
                    <TextBlock.Text>
                        <Binding Path="name" />
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock>
                    <TextBlock.Text>
                        <Binding Path="civilizationID" />
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Button Margin="12,0,0,12" Name="button1" Height="24.543" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="64.539" Click="button1_Click">Load core</Button>
        <ListView Margin="12,12,12,42" Name="listView1">
        </ListView>
        <Button Margin="82,0,0,13" Name="button2" HorizontalAlignment="Left" Width="75" Height="23" VerticalAlignment="Bottom" Click="button2_Click">Load map</Button>
    </Grid>
</Window>
